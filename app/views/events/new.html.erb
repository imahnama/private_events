<h1>Create A New Event</h1>
<%= form_for(:event, :url => events_path) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %> <br>

  <%= f.label :location %>
  <%= f.text_field :location %><br>

  <%= f.label :date %>
  <%= f.date_field :date %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.submit 'Create Event' %>
<% end %>
